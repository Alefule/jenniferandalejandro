<script type="module">
  const countdown = document.querySelector('#countdown');
  const target = new Date("2025-09-06T13:00:00Z").getTime();

  function updateCountdown() {
    const now = new Date().getTime();
    const distance = target - now;

    if (distance < 0) {
      countdown.innerHTML = "¡Ya es el gran día!";
      return;
    }

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    countdown.innerHTML = `
      <div class="grid grid-cols-4 gap-4 text-center">
        <div><div class="text-6xl font-bold golden">${days}</div><div class="text-s">días</div></div>
        <div><div class="text-6xl font-bold golden">${hours}</div><div class="text-s">horas</div></div>
        <div><div class="text-6xl font-bold golden">${minutes}</div><div class="text-s">min</div></div>
        <div><div class="text-6xl font-bold golden">${seconds}</div><div class="text-s">seg</div></div>
      </div>
    `;
  }

  setInterval(updateCountdown, 1000);
  updateCountdown();
</script>

<div class="bg-white mt-12 mb-12 max-w-md mx-auto p-4">
  <h2 class="text-5xl font-light text-center mb-4">El gran día</h2>
  <div id="countdown" class="text-center font-['Cormorant_Garamond'] "></div>
</div>
