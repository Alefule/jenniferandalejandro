<script>
    const initNavbar = () => {
      const menu = document.querySelector("#mobile-menu");
      const menuButtons = document.querySelectorAll(".button-menu-js");
      const darkBtn = document.getElementById("darkmode-btn");
  
      if (!menu || !menuButtons.length) return;
  
      const toggleMenu = () => menu.classList.toggle("hidden");
      const closeMenu = () => menu.classList.add("hidden");
  
      menuButtons.forEach(btn => {
        btn.onclick = (e) => {
          e.stopPropagation();
          toggleMenu();
        };
      });
  
      menu.onclick = (e) => {
        if (e.target === menu) closeMenu();
      };
  
      if (darkBtn) {
        darkBtn.onclick = () => document.documentElement.classList.toggle("dark");
      }
    };
  
    // 1. Cargar en la primera carga
    document.addEventListener("DOMContentLoaded", initNavbar);
  
    // 2. Volver a cargar al cambiar de página con Astro View Transitions
    document.addEventListener("astro:after-swap", initNavbar);
  </script>


